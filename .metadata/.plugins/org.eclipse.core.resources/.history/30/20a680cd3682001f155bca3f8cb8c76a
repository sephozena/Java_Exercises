package Practice6;

import java.util.ArrayList;
import java.util.List;

public class Order {
	
	private List<Product> orderedProductList;
	private List<Integer> orderedQuantityList;
	private double totalPrice;
	
	public Order() {
		orderedProductList = new ArrayList<Product>();
		orderedQuantityList = new ArrayList<>();
		totalPrice = 0.0;
	}

	
	public List<Product> getOrderedProductList() {
		return orderedProductList;
	}

	public List<Integer> getOrderedQuantityList() {
		return orderedQuantityList;
	}

	public double getTotalPrice() {
		return totalPrice;
	}
	
	// add the product and it's quantity to the orders
	public void addToOrders(Product product, int quantity) {
		orderedProductList.add(product);
		orderedQuantityList.add(quantity);
		totalPrice += product.getProductPrice() * quantity; 
	}
	
	public void clearOrders() {
		orderedProductList.clear();
		orderedQuantityList.clear();
		totalPrice = 0;
	}

	@Override
	public String toString() {
		return "Order [productOrderList=" + orderedProductList + ", totalPrice=" + totalPrice + "]";
	}
	
	

}

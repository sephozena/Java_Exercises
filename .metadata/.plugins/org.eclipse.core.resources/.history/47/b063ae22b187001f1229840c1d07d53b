package Exercise;

import java.util.ArrayList;
import java.util.List;

public class Main {
	public static void main(String[] args) {
		List<Product> productList = new ArrayList<Product>();
		productList.add(new  Product("pen", 20, 1.55));
		productList.add(new  Product("paper", 20, 0.5));

		productList.add(new  ProductFruit("apple", 20, 2.30, "Fruit"));
		productList.add(new  ProductFruit("mango", 20, 3.30, "Fruit"));

		
		
		for(Product item : productList) {
			if(item.itemType().equalsIgnoreCase("generic")) {
				System.out.println(item);
			}
			else {
				System.out.println(item.getItemType());
			}
		}
	}
}
